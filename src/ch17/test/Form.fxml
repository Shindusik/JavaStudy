<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints />
          <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefWidth="50.0" text="이름" GridPane.halignment="CENTER" />
            <Label prefWidth="50.0" text="국어" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <Label prefWidth="50.0" text="수학" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <Label prefWidth="50.0" text="영어" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
            <TextField id="txtName" prefWidth="100.0" GridPane.columnIndex="1" />
            <TextField id="txtKorean" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField id="txtMath" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField id="txtEnglish" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="btnFormAdd" mnemonicParsing="false" text="저장" />
            <Button id="btnFormCancel" mnemonicParsing="false" text="취소" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" top="20.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
   </padding>
</BorderPane>
