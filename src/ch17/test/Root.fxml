<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch17.test.RootController">
   <center>
      <TableView fx:id="tableView" prefHeight="200.0" prefWidth="420.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="100.0" resizable="false" text="이름" />
          <TableColumn prefWidth="100.0" resizable="false" text="국어" />
            <TableColumn prefWidth="100.0" resizable="false" text="수학" />
            <TableColumn prefWidth="100.0" resizable="false" text="영어" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAdd" alignment="CENTER" mnemonicParsing="false" text="추가" />
            <Button fx:id="barGraph" mnemonicParsing="false" text="학생별 막대그래프" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
